      </div><!-- /.container-fluid -->
    </nav>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8">
      <%= yield %> <!-- Aqui es donde va todo lo de Rails-->
    </div>



<!--========================== :::::ALERTAS::::: ============================================== -->

    
    <div id="alerta" class="col-sm-4 col-md-4"> <!--Alertas de las configuraciones -->
      <% if user_signed_in? && current_user.role != "admin" %>
        
        <div class="alert alert-danger">
          <p><img src="\images\alert_red.gif" alt="dsdad" width="50" height="50"></p>
          <strong>ALERTS</strong>
          <h3>ID USER::<%= current_user.id %></h3>
          <% @schedules = Array.new %>
          <% @history_thermostats = Array.new %>
          <% @thermostats = Thermostat.where( :user_id => current_user.id) %> <!--Los termostatos del usuario-->

          <% @thermostats.each do |thermostat|%>
            <% @schedules= Schedule.where(:thermostat_id => thermostat.id) %><!--Schedules del termostato-->           
            <% @history_thermostats= HistoryThermostat.where(:thermostat_id => thermostat.id).last %><!--Ultimo Historial del termostato-->

            <hr class="message-inner-separator">
            <p>SCHEDULES <H4>THERM ID :: <%= thermostat.id %></H4></p>
            <% @schedules.each do |schedule| %>
              <hr>
              <p>DAY ::<%= schedule.day_week %></p>
              <p>HORARIO ::<%= schedule.day_time %></p>
            <%end%>
            
            <p>ULTIMO HIST THERM</p>
            <% if HistoryThermostat.where(:thermostat_id => thermostat.id).length > 0%>
              <p>temperatura= <%= @history_thermostats.temperature %></p>
              <p>humidity= <%= @history_thermostats.humidity %></p>
              <p>energy= <%= @history_thermostats.energy %></p>
              <p>id termostato= <%= @history_thermostats.thermostat_id %></p>
              
              <% if @history_thermostats.temperature > 15 || @history_thermostats.temperature < 5 %>
                <!--code cuando se activa la alerta-->
              <%end%>
            
            <%else%>
              <div class="alert alert-success">
                <strong>That's all right.</strong>
                <hr class="message-inner-separator">
                <p>
                    Historial Vacio. :D</p>
              </div>
            <%end%>

          <%end%>


         
          
         
        </div>
      <% else %>
        
      <% end %>
    </div><!-- /#Alertas de las configuraciones -->    


