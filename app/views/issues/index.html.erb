<h1>Show Problems</h1>

 <table class="table table-striped"><thead>
      <tr class="info">
        <th>Thermostat_id</th>
        <th>Description</th>
        <th>Status</th>
        <th>Resolution</th>
        
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @issues.each do |issue| %>
        <tr>
          <% if issue.thermostat_id == @id_therm %>
             <td><%= issue.thermostat_id %></td>
             <td><%= issue.description %></td>
             <td><%= issue.status%></td>
             <td><%= issue.resolution %></td>
             <td><a href="/issues/cancel/<%=issue.thermostat_id %>"class="btn btn-danger">Cancel Problem</a></td>
       <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>
