<%= form_for(@issue) do |f| %>
  <% if @issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% @issue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="text-info">
    <%= f.hidden_field :thermostat_id %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description , :required => "required" %>
  </div>
  <%if current_user.role != "admin"%>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.text_field :status , :required => "required" , :disabled => "true"%>
  </div>
  <div class="field">
    <%= f.label :resolution %><br>
    <%= f.text_area :resolution, :disabled => "true" %>
  </div>
  <%else%>
    <div class="field">
    <%= f.label :status %><br>
    <%= f.text_field :status , :required => "required" %>
  </div>
  <div class="field">
    <%= f.label :resolution %><br>
    <%= f.text_area :resolution %>
  </div>
  <%end%>
  <div class="field">
    <%= f.label :thermostat_id %><br>
    <%= f.text_field :thermostat_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
