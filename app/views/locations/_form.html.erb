<%= render 'mapa' %>
<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">New Location</h3>
  </div>
  <div class="panel-body">
    <div class="container">

      <%= form_for(@location) do |f| %>
        <% if @location.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

            <ul>
            <% @location.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, :class => "textboxgrade", :required => "required" %>
        </div>
        <div class="field">
          <%= f.label :address %><br>
          <%= f.text_field :address, :class => "textboxgrade", :required => "required" %>
        </div>
          <%= f.hidden_field :latitude %>
        </div>
        <div class="text-info">
          
          <%= f.hidden_field :longitude %>
        </div>
        <br>

        <div class="actions">
          <td><a href="<%= locations_home_path %>" class="btn btn-default">Back</a></td>
          <%= f.submit :class => "btn btn-primary" %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>
